<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- enabled -->
    <style name="Title" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#272727</item>
        <item name="android:textSize">14sp</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="SubTitle" parent="Title">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#276699</item>
    </style>

    <style name="Hint" parent="SubTitle">
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">#87aeb4</item>
    </style>

    <!-- disabled -->
    <style name="Title.Disabled">
        <item name="android:textColor">#999999</item>
    </style>

    <style name="SubTitle.Disabled">
        <item name="android:textColor">#cccccc</item>
    </style>

    <style name="Hint.Disabled">
        <item name="android:textColor">#e1e1e1</item>
    </style>

</resources>
